@model EFdbAquarium.Models.Aquarium
@{
    ViewBag.Title = "Видалення акваріуму";
}

<div>
    <dl class="dl-horizontal">
        <dt>Форма</dt>
        <dd>
            @Html.DisplayFor(model => model.Shape)
        </dd>

        <dt>Об'єм</dt>
        <dd>
            @Html.DisplayFor(model => model.Volume)
        </dd>

        <dt>Фільтр</dt>
        <dd>
            @Html.DisplayFor(model => model.Filter)
        </dd>

        <dt>Компресор</dt>
        <dd>
            @Html.DisplayFor(model => model.Compressor)
        </dd>

        <dt>Ціна</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Видалити" />
            </div>
        </form>
    </div>
</div>