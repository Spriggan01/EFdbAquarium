@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EFdbAquarium.Models.AquariumListViewModel

<h2 class="mb-5">Каталог акваріумів</h2>

<form method="get" class="mb-2">
    <div>
        <label>Форма акваріуму: </label>
        <input asp-for="Shape" />

        <label>Тип освітлення: </label>
        <select name="light" asp-items="Model.Lights"></select>

        <input type="submit" value="Фільтр" class="btn btn-dark" />
        <a asp-action="CreateAq" class="btn btn-success">Додати акваріум</a>
    </div>
</form>

<table class="table table-striped">
    <tr class="table-success" style="color: darkgreen; text-shadow: black 0 0 1px;">
        <th>Форма</th>
        <th>Об'єм</th>
        <th>Фільтр</th>
        <th>Компресор</th>
        <th>Ціна</th>
        <th>Тип освітлення</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Aquariums)
    {
        <tr>
            <td>@item.Shape</td>
            <td>@item.Volume</td>
            <td>@item.Filter</td>
            <td>@item.Compressor</td>
            <td>@item.Price<b> ₴</b></td>
            <td>@item.Light?.TypeOfLight</td>
            <td class="text-center">
                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Докладніше</a> |
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
    }
</table>
